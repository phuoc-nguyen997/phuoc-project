      function KTmaNBH(){
          var re=/^NBH\w*/;
          if(re.test(document.getElementById('manbh-new').value.trim())==false)
          {
              ma.innerText="* bắt đầu là kí tự NBH";
              return false;
          }
          else{
              ma.innerText="";
              return true;
          }
      }

      function KTtenNBH(){
          var re=/^[A-Z]\w*/;
          if(re.test(document.getElementById('tennbh-new').value.trim())==false)
          {
              ten.innerText="* bắt đầu là kí tự hoa";
              return false;
          }
          else{
              ten.innerText="";
              return true;
          }
      }

      function KTsdtNBH(){
          var re=/^0[0-9].{10,}/;
          if(re.test(document.getElementById('sdtnbh-new').value.trim())==false)
          {
              sdt.innerText="* số điện thoại sai định dạng";
              return false;
          }
          else{
              sdt.innerText="";
              return true;
          }
      }

      function KTdiachiNBH(){
          var re=/^[A-Z]\w*/;
          if(re.test(document.getElementById('diachinbh-new').value.trim())==false)
          {
              diachi.innerText="* bắt đầu là kí tự hoa";
              return false;
          }
          else{
              diachi.innerText="";
              return true;
          }
      }

      function KTtendangnhap(){
          var re=/(?=.*\d).{6,}/;
          if(re.test(document.getElementById('tendangnhap').value.trim())==false)
          {
              tendn.innerText="* phải có chữ, số, ít nhất 6 kí tự";
              return false;
          }
          else{
              tendn.innerText="";
              return true;
          }
      }

      function KTmatkhau(){
          var re=/(?=.*\d).{6,}/;
          if(re.test(document.getElementById('matkhau').value.trim())==false)
          {
              mk.innerText="* phải có chữ, số, ít nhất 6 kí tự";
              return false;
          }
          else{
              mk.innerText="";
              return true;
          }
      }


