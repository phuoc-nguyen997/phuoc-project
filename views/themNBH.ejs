          .checkbox:after {
              content: "";
              width: 0.7em;
              height: 0.5em;
              position: absolute;
              top: 0.14em;
              left: 0.16em;
              border-left: 0.15em solid #fff;
              border-bottom: 0.15em solid #fff;
              background-position: top left, bottom left;
              transform: rotate(-45deg);
              display: none;
              cursor: pointer;
